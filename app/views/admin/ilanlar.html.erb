<!DOCTYPE html>
<html lang="en">

	<head>

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">

		<title>Campus İlan Admin Paneli</title>

		<!-- Bootstrap Core CSS -->
		<link href="/resources/plugins/adminpanel/css/bootstrap.min.css" rel="stylesheet">

		<!-- Custom CSS -->
		<link href="/resources/plugins/adminpanel/css/sb-admin.css" rel="stylesheet">

		<!-- Custom Fonts -->
		<link href="/resources/plugins/adminpanel/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->

	</head>

	<body>

		<div id="wrapper">

			<!-- Navigation -->
			<%= render "navigation" %>

			<div id="page-wrapper">

				<div class="container-fluid">

					<!-- Page Heading -->

					<br class="visible-xs">

					<div class="row">
						<div class="col-lg-12">
							<h1 class="page-header"> İlan Sayfası </h1>
							<ol class="breadcrumb">
								<li>
									<i class="fa fa-dashboard"></i><a href="index.html">Yönetim Paneli</a>
								</li>
								<li class="active">
									<i class="fa fa-file"></i> İlan Sayfası
								</li>
							</ol>
						</div>
					</div>
					<!-- /.row -->

					<form role = "form">
						

						<div class = "col-lg-4 input-group">
							<input placeholder="İlan Ara..."type = "text" class = "form-control" id="search">

							<span class = "input-group-btn">
								<button class = "btn btn-default" type = "button" onclick="window.location.href='ilanlar?search=' + $('#search')[0].value">
									Ara
								</button> </span>

						</div>
						
						

					</form>
					
					<br>

					<div class="table-responsive">
						<table class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>İlan Adı</th>
									<th>Tıklanma</th>
									<th>Popülerlik</th>
									<th>Fiyat</th>
									<th>Düzenle</th>

								</tr>
							</thead>
							<tbody>

								<% @ilanlar.each do |advert| %>
								<tr>
									<td><%= advert.name %></td>
									<td><%= advert.viewed_advert_counts.count %></td>
									<td>%<%= advert.viewed_advert_counts.count*100/ViewedAdvertCount.all.count %></td>
									<td><%= advert.price %></td>
									<td style="text-align:center;"><a href=""><span class = "glyphicon glyphicon-pencil"></span></a></td>
								</tr>
								<% end %>

							</tbody>
						</table>

					</div>

					<ul class = "pagination">
						<li>
							<a href = "/administrator/ilanlar?page=1">&laquo;</a>
						</li>
						
						<% for i in 1..@totalpage do %>
							<li <% if @page==i %>
									class = "active"
								<% end %>>
								<a href = "/administrator/ilanlar?page=<%= i %>&search=<%= @search %>"><%= i %></a>
							</li>
						<% end %>
						
						<li>
							<a href = "/administrator/ilanlar?page=<%= @totalpage %>">&raquo;</a>
						</li>
					</ul>

				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- /#page-wrapper -->

		</div>
		<!-- /#wrapper -->

		<!-- jQuery -->
		<script src="/resources/plugins/adminpanel/js/jquery.js"></script>

		<!-- Bootstrap Core JavaScript -->
		<script src="/resources/plugins/adminpanel/js/bootstrap.min.js"></script>

	</body>

</html>
