<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Campus İlan Admin Paneli</title>

    <!-- Bootstrap Core CSS -->
    <link href="/resources/plugins/adminpanel/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/resources/plugins/adminpanel/css/sb-admin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/resources/plugins/adminpanel/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <%= render "navigation" %>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                
                <br class="visible-xs">
                
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Üye Sayfası
                            
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Yönetim Paneli</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Üye Sayfası
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                
                <form role = "form">
						

						<div class = "col-lg-4 input-group">
							<input placeholder="Üye Ara..."type = "text" class = "form-control">

							<span class = "input-group-btn">
								<button class = "btn btn-default" type = "button">
									Ara
								</button> </span>

						</div>
						
						

					</form>
					
					<br>
                
                
                <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Üye Adı</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Üniversite</th>
                                        <th>E-posta</th>
                                        <th>Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                	
                                	<% @sonuyeler.each do |user| %>
                                		<tr>
	                                        <td><%= user.name %> <%= user.surname %></td>
	                                        <td><%= user.username %></td>
	                                        <td><%= user.university.name %></td>
	                                        <td><%= user.email %></td>
	                                        <td style="text-align:center;"><a href=""><span class = "glyphicon glyphicon-pencil"></span></a></td>
	                                    </tr>
                                	<% end %>
                                   
                                </tbody>
                            </table>
                        </div>
                        
                        <ul class = "pagination">
							<li>
								<a href = "#">&laquo;</a>
							</li>
							<li class = "active">
								<a href = "#">1</a>
							</li>
							<li class = "disabled">
								<a href = "#">2</a>
							</li>
							<li>
								<a href = "#">3</a>
							</li>
							<li>
								<a href = "#">4</a>
							</li>
							<li>
								<a href = "#">5</a>
							</li>
							<li>
								<a href = "#">&raquo;</a>
							</li>
						</ul>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="/resources/plugins/adminpanel/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/resources/plugins/adminpanel/js/bootstrap.min.js"></script>

</body>

</html>
