<% if current_user!= nil %>
<script>
	starrating(document).ready(function () {
starrating("#input-21f").rating({
starCaptions: function(val) {
if (val < 3) {
return val;
} else {
return 'high';
}
},
starCaptionClasses: function(val) {
if (val < 3) {
return 'label label-danger';
} else {
return 'label label-success';
}
},
hoverOnClear: false
});

starrating('#rating-input').rating({
min: 0,
max: 5,
step: 1,
size: 'lg',
showClear: false
});

starrating('#btn-rating-input').on('click', function() {

starrating('#rating-input').rating('refresh', {
showClear:true,
disabled:true
});
});

starrating('.btn-danger').on('click', function() {
starrating("#kartik").rating('destroy');
});

starrating('.btn-success').on('click', function() {

starrating("#kartik").rating('create');
});

starrating('#input-21b').on('rating.change', function() {

$.ajax({
url : '/vote',
data : {
authenticity_token : window._token,
advert : '<%= @advert.id %>',
	point : starrating('#input-21b').val()
	},
	error : function() {
	alert('error');
	},
	dataType : 'json',
	success : function(data) {
	if (!data.check) {
	alert('Sunucuda bir sorun meydana geldi');
	}
	},
	type : 'POST'
	});
	});
	starrating('#input-21b').on('rating.clear', function() {
	$.ajax({
	url : '/votedelete',
	data : {
	authenticity_token : window._token,
	advert : '<%= @advert.id %>'
	},
	error : function() {
	alert('error');
	},
	dataType : 'json',
	success : function(data) {
	if (!data.check) {
	alert('Sunucuda Bir sorun meydana geldi');
	}
	},
	type : 'POST'
	});
	});
	starrating('.rb-rating').rating({'showCaption':true, 'stars':'3', 'min':'0', 'max':'3', 'step':'1', 'size':'xs', 'starCaptions': {0:'status:nix', 1:'status:wackelt', 2:'status:geht', 3:'status:laeuft'}});
	});
</script>

<% end %>
