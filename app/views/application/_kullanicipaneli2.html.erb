<% if current_user!= nil && request.env['PATH_INFO']=="/uye/" + current_user.username %>
<script>
		$(function() {

	$(".hesapayarlari").hide();
	$(".favoriler").hide();
	$(".tekliflerim").hide();
	$(".profilim").hide();
	$(".inceledigimilanlar").hide();

	$("#hesapayarlariid2").click(function() {

	$(".favoriler").hide();
	$(".tekliflerim").hide();
	$(".profilim").hide();
	$(".inceledigimilanlar").hide();

	$(".hesapayarlari").show();

	})

	$("#inceledigimilanlar2").click(function(){

	$(".hesapayarlari").hide();
	$(".favoriler").hide();
	$(".tekliflerim").hide();
	$(".profilim").hide();
	$(".inceledigimilanlar").show();

	}

	)

	$("#profilim2").click(function() {

	$(".hesapayarlari").hide();
	$(".favoriler").hide();
	$(".tekliflerim").hide();

	$(".inceledigimilanlar").hide();

	$(".profilim").show();

	})

	$("#favorilerid2").click(function() {

	$(".hesapayarlari").hide();

	$(".tekliflerim").hide();
	$(".profilim").hide();
	$(".inceledigimilanlar").hide();
	$(".favoriler").show();

	})

	$("#tekliflerim2").click(function() {

	$(".hesapayarlari").hide();
	$(".favoriler").hide();

	$(".profilim").hide();
	$(".inceledigimilanlar").hide();
	$(".tekliflerim").show();

	})

	$("<%= @sekme %>
		").show();

	<% if @sekme==".tekliflerim" || @sekme==".hesapayarlari" %><% end %>
		})

		$(".panellinkler").click(function(event) {

			// This will prevent the default action of the anchor
			event.preventDefault();

			// Failing the above, you could use this, however the above is recommended
			return false;

		}); 
</script>
