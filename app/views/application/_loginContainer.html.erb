<% if current_user==nil %>

<div class="hidden-xs "  id="loginContainer">
	<a href="#" id="loginButton"><span>Giriş Yap &amp; Kaydol</span><em></em></a>
	<div style="clear: both"></div>
	<div id="loginBox">

		<%= form_tag '/login', :id => 'loginForm' do  %>
		<fieldset id="body">
			<fieldset>
				<label for="username">Kullanıcı Adı</label>
				<%= text_field_tag :username %>
			</fieldset>
			<fieldset>
				<label for="password">Şifre</label>
				<%= password_field_tag :password %>
			</fieldset>
			<%= submit_tag "Giriş Yap", :id => 'login' %>
			<input type="button" id="login" onclick="yonlendir()" value="Kayıt Ol" />
			<label for="checkbox"> <%= check_box_tag :remember, 1, false, :id => 'checkbox' %>
				Beni hatırla </label>
		</fieldset>
		<span><a href="/sifremiunuttum">Şifreni mi unuttun?</a></span>
		<% end %>

		<script>
			function yonlendir() {

				window.location = "/kayitol";

			}

		</script>

	</div>
</div>

<div class="visible-xs " id="loginContainer2">
	<a href="#" id="loginButton"><span>Giriş Yap &amp; Kaydol</span><em></em></a>
	<div style="clear: both"></div>
	<div id="loginBox">

		<%= form_tag '/login', :id => 'loginForm' do  %>
		<fieldset id="body">
			<fieldset>
				<label for="username">Kullanıcı Adı</label>
				<%= text_field_tag :username %>
			</fieldset>
