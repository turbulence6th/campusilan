						<div class="panel-heading">
							<h3 style="text-align: center;" class="panel-title"><%= @title %></h3>
						</div>

						<% if @adverts!= [] %>

						<div class=" panel-body">

							<% @adverts.each do |advert| %>

							<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">

								<div class="thumbnail">
									<a href="<%= advert.href %>"> <% if advert.images == [] %>
									<%= image_tag Image.new.imagefile %>
									<% else %>
									<%= image_tag advert.images[0].imagefile(:small) %>
									<% end %> </a>
								</div>

								<div class="caption">

									<% if advert.name.length <= 8 %>

									<h5><%= advert.name %></h5>
