								<div class='wrapper'>
									<!-- image -->
									<a href="<%= advert.href %>"> <%= image_tag advert.images[0].imagefile(:small) %></a>
									<!-- description div -->
									<div class='description'>
										<!-- description content -->
										<div class='description_content'>
											<%= advert.name %>
										</div>
										<!-- end description content -->
									</div>
									<!-- end description div -->
								</div>

								<% else %>

								<div class='wrapper'>
									<!-- image -->
									<a href="<%= advert.href %>"> <%= image_tag Image.new.imagefile %></a>
									<!-- description div -->
									<div class='description'>
